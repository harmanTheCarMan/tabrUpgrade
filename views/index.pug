extends layout

block content
  if( user )
    p Logged in as #{user.email}

    a(href='/users/logout') Logout
  .container
    .row
      .add-tab.col-xs-8.col-sm-5.col-md-2.col-lg-2.col-xl-2
        form(action='/tabs', method='post')
          input.form-control(type='text', name='new-tab' placeholder='Tab Title')
          .addTabButton.col-xs-7.col-sm-7.col-md-5.col-lg-5.col-xl-5
            button.btn.btn-primary.btn-sm.btn-block(class='createTabButton' type='submit') Create Tab

    .row
      .add-task.col-xs-8.col-sm-5.col-md-2.col-lg-2.col-xl-2
        form(action='/tasks', method='post' )
          input.form-control(type='text', name='new-task' placeholder='Task Description')
          .addTaskButton.col-xs-7.col-sm-7.col-md-2.col-lg-2.col-xl-2
            select(name='tab-id')
              each tab in tabs
                option(label=`${tab.title}`, value=`${tab.id}`)
          .addTaskButton.col-xs-7.col-sm-7.col-md-2.col-lg-2.col-xl-2
            button.btn.btn-primary.btn-sm.btn-block(type='submit') Create Task

    ul.nav.nav-tabs(role='tablist')
      each tab, index in tabs
        li(role='presentation', class=`${index === 0 ? 'active' : ''}`)
          a(href=`#tab-${tab.id}`, aria-controls=`${tab.title}`, role='tab', data-toggle='tab')= tab.title

    .tab-content
      each tab, index in tabs
        div.tab-pane(role='tabpanel', id=`tab-${tab.id}`, class=`${index === 0 ? 'active' : ''}`)
          form(method='post', action='/tabs/delete')
            input.form-control(type='hidden', name='id', value=`${tab.id}`)
            button.btn.btn-warning(type='submit')
              span.glyphicon.glyphicon-remove-circle

          each task in tab.tasks
            .task(data-id=`${task.id}`)
              input(type='checkbox', checked=task.completed, data-id=task.id)
              input.form-control.task-description(type='text', data-id=task.id, value=task.description)

              form(method='post', action='/tasks/up')
                input(type='hidden', name='rank', value=`${task.rank}`)
                input(type='hidden', name='id', value=`${task.id}`)
                input(type='hidden', name='tab-id', value=`${tab.id}`)
                button(type='submit')
                  span.glyphicon.glyphicon-arrow-up

              form(method='post', action='/tasks/down')
                input(type='hidden', name='rank', value=`${task.rank}`)
                input(type='hidden', name='id', value=`${task.id}`)
                input(type='hidden', name='tab-id', value=`${tab.id}`)
                button(type='submit')
                  span.glyphicon.glyphicon-arrow-down

              form(method='post', action='/tasks/delete')
                input(type='hidden', name='id', value=`${task.id}`)
                button(type='submit')
                  span.glyphicon.glyphicon-remove-circle
