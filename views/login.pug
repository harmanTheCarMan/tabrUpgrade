extends layout

block content
  .container
    .forms.col-md-2
      form.group-inline(role='form', action='/users/login',method='post')
        .form-group
          input.form-control(type='text', name='email', placeholder='Enter Email')
        .form-group
          input.form-control(type='password', name='password', placeholder='Password')
        button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign In
        .newaccount
          a(href='/users/register')  Register
